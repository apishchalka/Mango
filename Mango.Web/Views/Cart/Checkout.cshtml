@using Mango.Web.Service.IService.Dto
@model CheckoutCartDto

<form method="post">
   <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-warning mb-2">Order Summary</span>
            </div>
            <div class="col-md-5 col-12">
                <a class="btn btn-outline-warning form-control" asp-action="CartIndex">Back to Cart</a>
            </div>
            <br /><br /><br />
            <hr />
            <div class="col-7">
                <div class="row pt-2">
                    <div class="col-12 py-2">
                        <input placeholder="First name" asp-for="Header.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.Header.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input placeholder="Last name" asp-for="Header.LastName" class="form-control" />
                        <span asp-validation-for="@Model.Header.LastName" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input placeholder="Email" asp-for="Header.Email" class="form-control" />
                        <span asp-validation-for="@Model.Header.Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input class="form-control" placeholder="Phone" asp-for="Header.Phone" />
                        <span asp-validation-for="@Model.Header.Phone" class="text-danger"></span>
                    </div>
                    <div class="col-12 pt-2">
                        <label class="col-form-label">Order will be ready in 30minutes after placing order. If you place order when restaurant is closed it will be ready next day.</label>
                    </div>

                </div>
            </div>
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Product Details
                                </div>

                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />

                        @for (int i=0; i< Model.Details.Count;i++)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@Model.Details[i].Name</span>
                                    <input asp-for="@Model.Details[i].Name" hidden />
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @Model.Details[i].Price.ToString("c")</span>
                                    <input asp-for="@Model.Details[i].Price" hidden />                                    
                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @Model.Details[i].Count.ToString()</span>
                                    <input asp-for="@Model.Details[i].Count" hidden />
                                </div>
                            </div>
                        }

                        <hr />

                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total :  @Model.Header.CartTotal.ToString("c") <br />
                                <span class="text-success"> Order Discount :  @Model.Header.Discount.ToString("c")</span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">

                            <div class="col-12 ">
                                <button type="submit" asp-action="Checkout" class="btn btn-success form-control ">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

